<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>



<p>
Is a proud member of:
</p>

<ul>
  <% @user.beerclubs.each do |club| %>
    <li><%= link_to club, beerclub_path %></li>
  <% end %>
</ul>

<p>
  Has: <%= @user.ratings.count %> <%= "rating".pluralize(@user.ratings.count)%>, average <%= @user.average_rating %>
</p>


<ul>
  <% @user.ratings.each do |rating| %>
      <li>
        <%= rating %>
        <% if @user == current_user %>
            <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </li>
  <% end %>
</ul>


<% if @user == current_user %>
<td><%= link_to 'Edit Account', edit_user_path(@user) %></td>
<td><%= link_to 'Destroy Account', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>

<%= link_to 'Back', users_path %>
